<div class="col-md-12">
  <div class="jumbotron">
    <p>Before start please add "lvh.me." at the beginning of the current url like this <a href="http://lvh.me.localhost:3000/"><em>http://<strong>lvh.me.</strong>localhost:300 </em></a></p>
    For more information search lvh.me
  </div>
  <div class=" jumbotron panel panel-default">
    <div class="panel-body">
      <h2 class="extra-margin-top">Create Subdomain</h2>
      
      <div class="col-md-12">
        <%= form_for(@tenant, html: { class: 'form-inline' }) do |f| %>
          <%= f.text_field :name, placeholder: 'Name', class: 'form-control', required: true %>
          <%= f.submit 'Create', class: 'btn btn-primary'%>
        <%end%>
      </div>
      <div class="col-md-6">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @tenants.each do |tenant| %>
              <tr>
                <td><%= tenant.name %></td>
                <td><a href="<%= tasks_url(subdomain: tenant.name) %>">Go<i class="glyphicon glyphicon-chevron-right"></i></a></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>